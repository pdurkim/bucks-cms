{
  "name": "bucks-cms",
  "version": "1.0.0",
  "description": "Church management software for Bucks",
  "main": "index.js",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "author": "Peter Kim <pkim@boardeffect.com>",
  "license": "ISC",
  "dependencies": {
    "create-react-app": "^1.5.2",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  },
  "repository": "https://github.com/peyterkim/bucks-cms.git"
}
